<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp"> <!-- 会使上左右三条边不可见，值与边框粗细有关，边框为xdp时，这里设置为-(x+1)dp -->
        <shape>
            <solid android:color="#0000" />   <!-- 主体背景颜色值，此处为透明 -->
            <stroke
                android:width="2dp"
                android:color="#26AFAFAF" />
        </shape>

    </item>

</layer-list>
