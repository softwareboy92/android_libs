<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_alert_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_line_white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="@string/app_name"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/alert_dialog_line" />

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_alert_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg"
            android:gravity="center"
            android:textColor="#fff"
            android:text="取消"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_alert_dialog_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alert_dialog_line" />

        <Button
            android:id="@+id/btn_alert_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg"
            android:gravity="center"
            android:textColor="@color/action_sheet_blue"
            android:textSize="16sp"
            android:text="确认"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="确认"
        android:background="@drawable/corners_bg"
        android:textStyle="bold"
        android:textColor="#2DC4C4"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>