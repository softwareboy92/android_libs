<?xml version="1.0" encoding="utf-8"?>
<com.lv.libmvp.weight.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:fillViewport="true"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#343434"
            android:gravity="center"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/show_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#343434"
            android:gravity="center"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/scan_camare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="scan_camare" />

        <Button
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="BUTTON-1" />

        <Button
            android:id="@+id/hotcoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="BUTTON-2" />

        <Button
            android:id="@+id/custom_dialog_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="custom_dialog_01" />


        <Button
            android:id="@+id/custom_dialog_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="custom_dialog_02" />

        <Button
            android:id="@+id/custom_dialog_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="custom_dialog_03" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:background="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</com.lv.libmvp.weight.CustomScrollView>